<%- include('./partials/head') %>
<%- include('./partials/nav') %>

<main class="main-battle">
  
      <!-- Outfit informatie -->
      <article class="stats-card">
        <header class="stats-title">Huidig Outfit</header>
        <div class="outfit-info">
          <img class="outfit-icon" src="<%= currentOutfit?.images?.smallIcon || '/images/Profile.webp' %>" alt="<%= currentOutfit?.name || 'Outfit' %>" />
          <div class="outfit-details">
            <h3 class="outfit-name"><%= currentOutfit?.name || 'Geen Outfit' %></h3>
            <p class="outfit-type"><%= currentOutfit?.type?.displayValue || currentOutfit?.type?.value || 'Onbekend' %></p>
            <p class="outfit-rarity <%= currentOutfit?.rarity?.value?.toLowerCase() || 'common' %>">
              <%= currentOutfit?.rarity?.displayValue || currentOutfit?.rarity?.value || 'Gewoon' %>
            </p>
            <% if (currentOutfit?.description) { %>
              <p class="outfit-description"><%= currentOutfit.description %></p>
            <% } %>
            <% if (currentOutfit?.series?.value) { %>
              <p class="outfit-series">Serie: <%= currentOutfit.series.value %></p>
            <% } %>
          </div>
        </div>
      </article>
    </aside>

  <section class="battle-container">
    <h1 class="battle-title">Battle Resultaten</h1>

    <!-- Aantal gewonnen -->
    <section class="battle-stats">
      <article class="stat-box">
        <header class="stat-label">Overwinningen</header>
        <output class="stat-value" id="wins-count"><%= wins %></output>
      </article>

      <!-- Aantal verloren -->
      <article class="stat-box">
        <header class="stat-label">Verliezen</header>
        <output class="stat-value" id="losses-count"><%= losses %></output>
      </article>
    </section>

    <!-- Win en verlies knoppen -->
    <nav class="battle-buttons" aria-label="Battle uitkomst knoppen">
      <form action="/battle" method="POST">
        <input type="hidden" name="win" value="true" />
        <button type="submit" class="battle-button win-button">WIN</button>
      </form>
      <form action="/battle" method="POST">
        <input type="hidden" name="loss" value="true" />
        <button type="submit" class="battle-button loss-button">VERLIES</button>
      </form>
    </nav>
  </section>
</main>


<%- include('./partials/window') %>
<%- include('./partials/foot') %>
