<!-- Include head -->
<%- include('./partials/head') %>
<!-- Include nav -->
<%- include('./partials/nav') %>

<main class="main-lobby">
  <!-- Linkerkant statistieken -->

  <aside class="stats-side">
    <article class="stats-card">
      <!-- Speler statistieken -->

      <header class="stats-title">Character Stats</header>
      <ul class="stat-list">
        <li class="stat-item">
          <label>Wins:</label>
          <output class="stat-value"><%= wins %></output>
        </li>
        <li class="stat-item">
          <label>Losses:</label>
          <output class="stat-value"><%= losses %></output>
        </li>
        <li class="stat-item">
          <label>K/D Ratio:</label>
          <% if (losses === 0) { %>
          <output class="stat-value"
            ><%= wins > 0 ? wins.toFixed(2) : "0.00" %></output
          >
          <% } else { %>
          <output class="stat-value"><%= (wins/losses).toFixed(2) %></output>
          <% } %>
        </li>
      </ul>
    </article>

    <!-- Outfit informatie -->
    <article class="stats-card">
      <header class="stats-title">Current Outfit</header>
      <div class="outfit-info">
        <img class="outfit-icon" src="<%= currentOutfit?.images?.smallIcon || '/images/Profile.webp' %>" alt="<%= currentOutfit?.name || 'Outfit' %>" />
        <div class="outfit-details">
          <h3 class="outfit-name"><%= currentOutfit?.name || 'No Outfit' %></h3>
          <p class="outfit-type"><%= currentOutfit?.type?.displayValue || currentOutfit?.type?.value || 'Unknown' %></p>
          <p class="outfit-rarity <%= currentOutfit?.rarity?.value?.toLowerCase() || 'common' %>">
            <%= currentOutfit?.rarity?.displayValue || currentOutfit?.rarity?.value || 'Common' %>
          </p>
          <% if (currentOutfit?.description) { %>
            <p class="outfit-description"><%= currentOutfit.description %></p>
          <% } %>
          <% if (currentOutfit?.series?.value) { %>
            <p class="outfit-series">Series: <%= currentOutfit.series.value %></p>
          <% } %>
        </div>
      </div>
    </article>
  </aside>

  <!-- Personage middelste deel -->
  <section class="character-display">
    <figure class="character-container">
      <img class="character" src="<%= currentOutfit?.images?.featured || currentOutfit?.images?.icon || '/images/Full character.png' %>" alt="<%= currentOutfit?.name || 'Character' %>" />
      <figcaption class="character-name"><%= username || 'John_Pork_2012' %></figcaption>
    </figure>
    <a href="./battle">
      <button class="play-button">Speel</button>
    </a>
  </section>

  <!-- Rechterkant nieuws -->
  <aside class="news-side">
    <article class="news-card">
      <header class="news-title">NIEUWS</header>
      <section id="news-content">
        <% if (newsItems && newsItems.length > 0) { %>
          <% newsItems.forEach((item) => { %>
            <section class="news-item">
              <h3><%= item.title || 'News Update' %></h3>
              <% if (item.image) { %>
                <img
                  src="<%= item.image %>"
                  class="news-image"
                  alt="<%= item.title || 'News Image' %>"
                />
              <% } %>
              <p class="news-body"><%= item.body || 'No content available' %></p>
            </section>
            <hr style="border-color: var(--fortnite-blue); margin: 15px 0" />
          <% }); %>
        <% } else { %>
          <figure class="spinner"></figure>
        <% } %>
      </section>
    </article>
  </aside>
</main>

<!-- Include window -->
<%- include('./partials/window') %>
<!-- Include foot -->
<%- include('./partials/foot') %>
